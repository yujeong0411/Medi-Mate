{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "nixpacks"
  },
  "deploy": {
    "startCommand": "python3 main.py",
    "healthcheckPath": "/",
    "volumes": [
      {
        "name": "data-volume",
        "mountPath": "/app/data"
      }
    ]
  }
}